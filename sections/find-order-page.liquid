{{ 'section-main-page.css' | asset_url | stylesheet_tag }}
{{ 'section-contact-form.css' | asset_url | stylesheet_tag }}

{%- comment -%} DEBUG: Section is loading {%- endcomment -%}
<div style="background: red; color: white; padding: 2rem; font-size: 2rem; text-align: center;">
  <strong>SECTION IS RENDERING - If you see this red box, the section works!</strong>
</div>

<script src="{{ 'find-order.js' | asset_url }}" defer="defer"></script>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .find-order-form {
    max-width: 60rem;
    margin: 0 auto;
  }

  .find-order-results {
    margin-top: 3rem;
    padding: 2rem;
    background: rgb(var(--color-background));
    border-radius: var(--inputs-radius);
    display: none;
  }

  .find-order-results.show {
    display: block;
  }

  .find-order-results h3 {
    margin-top: 0;
    margin-bottom: 1.5rem;
  }

  .find-order-download-link {
    display: inline-block;
    margin-top: 1rem;
    padding: 1.2rem 2.4rem;
    background-color: #005633;
    color: #FFFFFF;
    text-decoration: none;
    border-radius: var(--inputs-radius);
    font-weight: 500;
    transition: background-color 0.3s ease;
  }

  .find-order-download-link:hover {
    background-color: #004428;
  }

  .find-order-error,
  .find-order-loading {
    margin-top: 1.5rem;
    padding: 1.5rem;
    border-radius: var(--inputs-radius);
    display: none;
  }

  .find-order-error.show,
  .find-order-loading.show {
    display: block;
  }

  .find-order-error {
    background-color: rgba(var(--color-base-error), 0.1);
    color: rgb(var(--color-base-error));
    border: 1px solid rgba(var(--color-base-error), 0.2);
  }

  .find-order-loading {
    text-align: center;
    color: rgb(var(--color-foreground));
  }

  .find-order-order-details {
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(var(--color-foreground), 0.1);
  }

  .find-order-order-details p {
    margin: 0.5rem 0;
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme | default: 'scheme-1' }} gradient">
  <div class="contact page-width page-width--narrow section-{{ section.id }}-padding">
    <h1 class="main-page-title page-title h0{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
      {{ section.settings.heading | default: 'Find Your Order' }}
    </h1>
    
    {%- comment -%} Test: If you see this, the section is loading {%- endcomment -%}
    <p style="background: yellow; padding: 1rem; margin: 1rem 0;">SECTION IS LOADING - If you see this, the section works!</p>

    <div class="rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
      {%- if section.settings.description != blank -%}
        <p>{{ section.settings.description }}</p>
      {%- else -%}
        <p>Enter your order number and email address to find your download links.</p>
      {%- endif -%}
    </div>

    <form
      class="find-order-form isolate"
      id="FindOrderForm"
      data-api-endpoint="{{ section.settings.api_endpoint | default: '' }}"
    >
      <div class="contact__fields">
        <div class="field">
          <input
            class="field__input"
            type="text"
            id="FindOrderForm-orderNumber"
            name="order_number"
            placeholder="Order Number (e.g., #1001)"
            required
            autocomplete="off"
          >
          <label class="field__label" for="FindOrderForm-orderNumber">
            Order Number
            <span aria-hidden="true">*</span>
          </label>
        </div>

        <div class="field field--with-error">
          <input
            autocomplete="email"
            type="email"
            id="FindOrderForm-email"
            class="field__input"
            name="email"
            spellcheck="false"
            autocapitalize="off"
            aria-required="true"
            placeholder="Email Address"
            required
          >
          <label class="field__label" for="FindOrderForm-email">
            Email Address
            <span aria-hidden="true">*</span>
          </label>
        </div>
      </div>

      <div class="find-order-loading" id="FindOrderLoading" role="status" aria-live="polite">
        <p>Searching for your order...</p>
      </div>

      <div class="find-order-error" id="FindOrderError" role="alert" aria-live="assertive"></div>

      <div class="contact__button">
        <button type="submit" class="button button--primary" id="FindOrderSubmit">Find My Order</button>
      </div>
    </form>

    <div class="find-order-results" id="FindOrderResults">
      <h3>Order Found!</h3>
      <div class="find-order-order-details" id="FindOrderDetails"></div>
      <div id="FindOrderDownloads"></div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Find Order Page",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Find Your Order"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Enter your order number and email address to find your download links."
    },
    {
      "type": "text",
      "id": "api_endpoint",
      "label": "API Endpoint URL",
      "info": "Enter the serverless function endpoint URL (e.g., https://your-function.vercel.app/api/find-order)",
      "default": ""
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Find Order Page"
    }
  ]
}
{% endschema %}
